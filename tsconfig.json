{
  "include": ["src"],
  "exclude": ["test"],
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
      }
    ]
  }
}