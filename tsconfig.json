{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,

    "target": "es2019",
    "lib": [
      "DOM",
      "es2020"
    ],

    "module": "es2020",
    "moduleResolution": "node",
    
    "pretty": true,
    "newLine": "lf",
    "stripInternal": false,
    "sourceMap": true
  }
}